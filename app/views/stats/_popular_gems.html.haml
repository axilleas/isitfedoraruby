%div.stats
  %h2
    = _('Popular gems')
  %table.table.table-hover.table-condensed.table-responsive
    %thead
      %tr.warning
        %th
          = _('Gem')
        %th
          = _('Version')
        %th
          = _('Rpm Version')
        %th
          = _('Downloads')
    %tbody
      - @popular_gems.each do |gem|
        %tr
          %td= link_to gem.name, rubygem_path(gem.name)
          %td= gem.version
          %td= gem.version_in_fedora('Rawhide')
          %td= number_with_delimiter(gem.downloads)
